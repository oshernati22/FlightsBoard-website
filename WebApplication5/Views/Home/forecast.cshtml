
@{
    ViewBag.Title = "forecast";
}

<div class="contianer">

    <div class="jumbotron" style="background-image:url('../../resources/sunset-1757593_1920 (1).jpg');background-size:cover; opacity: 0.9;">
        <h1>Forecast </h1>
        <h6>One of the most important factors in planning a trip is considering the weather, here you can plan your trip according to the weather</h6>
        <hr class="my-4">

        <div class="row">
            <div class="col-md-10 col-sm-3">
                <div class="card weather-card" style="background-color:rgba(241, 241, 241, 0.29)">
                    <div class="card-body pb-3">
                        <div class="dropdown">
                            <a href="#"><h4 class="card-title font-weight-bold dropdown-toggle" id="toggle_weather"><s href="#" style="text-decoration: underline;" id="weather_title"></s> <div style="float: right;" id="weather_country">IL</div></h4></a>
                            <a href="/Home/googleMap">Open city on map</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="weather">
                                <input class="form-control" id="myInput" type="text" placeholder="Choose a city.." style="padding: 20px;margin-top: -7px;border: 0;border-radius: 0;background: #f1f1f1;">
                                <a class="dropdown-item" href="#">London</a>
                                <a class="dropdown-item" href="#">Paris</a>
                                <a class="dropdown-item" href="#">New York</a>
                                <a class="dropdown-item" href="#">Tokyo</a>
                                <a class="dropdown-item" href="#">Barcelona</a>
                                <a class="dropdown-item" href="#">Moscow</a>
                                <a class="dropdown-item" href="#">Chicago</a>
                                <a class="dropdown-item" href="#">Singapore</a>
                                <a class="dropdown-item" href="#">Dubai</a>
                                <a class="dropdown-item" href="#">San Francisco</a>
                                <a class="dropdown-item" href="#">Madrid</a>
                                <a class="dropdown-item" href="#">Amsterdam</a>
                                <a class="dropdown-item" href="#">Los Angeles</a>
                                <a class="dropdown-item" href="#">Rome</a>
                                <a class="dropdown-item" href="#">Boston</a>
                                <a class="dropdown-item" href="#">San Jose</a>
                                <a class="dropdown-item" href="#">Toronto</a>
                                <a class="dropdown-item" href="#">Washington DC</a>
                                <a class="dropdown-item" href="#">Zurich</a>
                                <a class="dropdown-item" href="#">Hong Kong</a>
                                <a class="dropdown-item" href="#">Beijing</a>
                                <a class="dropdown-item" href="#">Berlin</a>
                                <a class="dropdown-item" href="#">Sydney</a>
                                <a class="dropdown-item" href="#">Las Vegas</a>
                                <a class="dropdown-item" href="#">Frankfurt</a>
                                <a class="dropdown-item" href="#">Miami</a>
                                <a class="dropdown-item" href="#">San Diego</a>
                                <a class="dropdown-item" href="#">Seoul</a>
                                <a class="dropdown-item" href="#">Prague</a>
                                <a class="dropdown-item" href="#">Munich</a>
                                <a class="dropdown-item" href="#">Tel Aviv</a>
                                <a class="dropdown-item" href="#">Jerusalem</a>
                                <a class="dropdown-item" href="#">Rehovot</a>
                                <a class="dropdown-item" href="#">Rishon</a>
                                <a class="dropdown-item" href="#">Haifa</a>
                                <a class="dropdown-item" href="#">Eilat</a>
                                <a class="dropdown-item" href="#">Beer-Sheva</a>
                            </div>
                        </div>

                        <div id="show_weather" style="display: none;">
                            <!-- Text -->
                            <p class="card-text"><span id="weather_date" title="The date that the weather was taken">Mon, 12:30 PM</span>, <span id="weather_desc">Mostly Sunny</span></p>
                            <div class="d-flex justify-content-between">
                                <p class="display-1 degree"><span id="deg1">23</span>&deg;</p>
                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <p>💧 <span id="weather_humidity">3</span>% Humidity</p>
                                <p>💨 <span id="weather_winds"></span> hm/h Winds</p>
                                <p>💨 <span id="weather_winds"></span> hm/h Winds</p>
                            </div>
                            <div class="progress md-progress">
                                @{
                                    var date = DateTime.Now.Hour;
                                    var percent = (double)date / (double)24 * (double)100;
                                }
                                <div class="progress-bar black" role="progressbar" style="width: @percent%" aria-valuenow="@((int)(percent))" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <ul class="list-unstyled d-flex justify-content-between font-small text-muted mb-4">
                                <li class="pl-4">12AM</li>
                                <li>12PM</li>
                                <li class="pr-4">24PM</li>
                            </ul>
                        </div>
                    </div>
                    <div style="width: 100%; height: 100% margin: auto; text-align:center">
                        <canvas id="photoGal" height="400px" width="800px"> </canvas>
                    </div>
                </div>
                <!-- Card -->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/src/methods/script.js" asp-append-verstion="true"></script>
    
}


